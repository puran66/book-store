<!-- change_password.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Change Password</title>
</head>

<body class="bg-gray-100 h-screen flex items-center justify-center">

  <div class="max-w-md w-full p-6 bg-white rounded-md shadow-md">
    <form action="/new_password" method="post">
      <h1 class="text-2xl font-bold mb-6 text-gray-800 text-center">Change Password</h1>

      <!-- Go Back Icon -->
      <a href="/book-store" class="text-blue-500 mb-4 block"><i class="fas fa-arrow-left mr-2"></i>Back Home</a>

      <!-- New Password Field -->
      <div class="mb-4 relative">
        <label for="newPassword" class="block text-sm font-medium text-gray-600">New Password</label>
        <input type="password" id="newPassword" name="newPassword" class="mt-1 p-2 w-full border rounded-md pr-10"
          required>
        <button type="button" class="absolute inset-y-0 right-0 flex items-center px-3 focus:outline-none"
          onclick="togglePassword('newPassword')">
          <i class="fa-solid fa-eye-slash mt-3"></i>
        </button>
      </div>

      <!-- Confirm Password Field -->
      <div class="mb-4 relative">
        <label for="confirmPassword" class="block text-sm font-medium text-gray-600">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword"
          class="mt-1 p-2 w-full border rounded-md pr-10" required>
        <button type="button" class="absolute inset-y-0 right-0 flex items-center px-3 focus:outline-none"
          onclick="togglePassword('confirmPassword')">
          <i class="fa-solid fa-eye-slash mt-3"></i>
        </button>
        <p id="successMessage" class="<%= style  %>">
          <%= message %>
        </p>
      </div>

      <!-- Change Password Button -->
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-full focus:outline-none">Change
        Password</button>
    </form>
  </div>

  <script>
    function togglePassword(inputId) {
      const passwordInput = document.getElementById(inputId);
      passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
    }
  </script>

</body>

</html>